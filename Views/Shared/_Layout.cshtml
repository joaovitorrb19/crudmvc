@{
    var controllerActive =  ViewContext.RouteData.Values["controller"].ToString();
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD - @ViewBag.TituloPagina </title>
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
</head>
<body>
        <nav class="navbar navbar-expand-lg bg-body-tertiary bg-black navbar-dark align-middle">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">CRUD</a>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link @(controllerActive == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-link @(controllerActive == "Categoria" ? "active" : "")"  asp-controller="Categoria" asp-action="Index">Categorias</a>
                        <a class="nav-link @(controllerActive == "Produto" ? "active" : "")" asp-controller="Produto" asp-action="Index">Produtos</a>
                        <a class="nav-link @(controllerActive == "Cliente" ? "active" : "")" asp-controller="Cliente" asp-action="Index">Clientes</a>
                    </div>
                </div>
            </div>
        </nav>
        
        
        <div class="container">
            @RenderBody()
        </div>
<script src="/lib/bootstrap5/dist/js/bootstrap.js"></script>
</body>
</html>